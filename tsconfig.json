{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node", 
    "skipLibCheck": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/*"],
      "@books/*": ["src/books/*"],
      "@types/*": ["src/types/*"],
    },
    "types": ["jest"]
  },
  "include": ["src", "__tests__"]
}
